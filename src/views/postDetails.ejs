<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post Details</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
    <h1>Post Details</h1>
    <div class="post-details">
        <h2><%= post.title %></h2>
        <p><strong>Author:</strong> <%= post.User.username %></p>
        <p><strong>Content:</strong></p>
        <p><%= post.content %></p>
        <h3>Categories:</h3>
        <ul>
            <% post.Categories.forEach(category => { %>
                <li><%= category.name %></li>
            <% }); %>
        </ul>
        <h3>Comments:</h3>
        <ul>
            <% post.Comments.forEach(comment => { %>
                <li><%= comment.content %> - <em><%= comment.User.username %></em></li>
            <% }); %>
        </ul>
    </div>
    <a href="/posts/update/<%= post.id %>"><button>Update Post</button></a>
    <a href="/posts/delete/<%= post.id %>"><button>Delete Post</button></a>
</body>
</html>